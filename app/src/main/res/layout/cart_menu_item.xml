<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cart_menu_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/cart_menu_card_item_ll_padding">

            <ImageView
                android:id="@+id/cart_menu_card_iv_img"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginRight="@dimen/cart_menu_card_item_iv_right_margin"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cart_menu_card_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_05"
                    android:textSize="16sp"
                    android:layout_marginBottom="@dimen/cart_menu_card_item_tv_bottom_margin" />

                <TextView
                    android:id="@+id/cart_menu_card_tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_10"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:lines="1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/cart_option_rv_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color_03" />
                </RelativeLayout>
            </LinearLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center">
                
                <ImageView
                    android:id="@+id/cart_menu_card_iv_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_menu_close_nor"/>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>